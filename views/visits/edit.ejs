<% include ../partials/header %>

<div class="container ptb-125">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <h3 class="login-heading mb-4 text-center">Edit visit</h3>
            <form action="/visits/<%= results[0].id %>?_method=PUT" method="post">
                <% if (errors.length > 0) { %>
                    <% for(var i = 0; i < errors.length; i++) { %>
                        <div class="alert alert-danger mb-15" role="alert">
                            <%= errors[i].msg %>
                        </div>
                    <% } %>
                <% } %>

                    <div class="form-label-group">
                        <input type="text" id="inputUsername" class="form-control" placeholder="Patient Id" name="patient_id" value="<%if (inputs.length > 0) { %><%= inputs[0].patient_id %><% }else{ %><%= results[0].patient_id %><% } %>" required autofocus>
                        <label for="inputUsername">Patient Id</label>
                    </div>
                    <div class="form-label-group">
                        <input type="text" id="inputUsername" class="form-control" placeholder="Doctor Id" name="doctor_id" value="<%if (inputs.length > 0) { %><%= inputs[0].doctor_id %><% }else{ %><%= results[0].doctor_id %><% } %>">
                        <label for="inputUsername">Doctor Id</label>
                    </div>



                <button class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>